{
  "hooks": {
    "PostToolUse": [
      {
        "matcher": {"tools": ["Bash"]},
        "hooks": [{"type": "command", "command": ".claude/hooks/auto-doc-sync.sh Bash \"$TOOL_INPUT\" \"$TOOL_OUTPUT\" \"$EXIT_CODE\""}]
      },
      {
        "matcher": {"tools": ["Write"]},
        "hooks": [{"type": "command", "command": ".claude/hooks/auto-doc-sync.sh Write \"$TOOL_INPUT\" \"\" \"0\""}]
      },
      {
        "matcher": {"tools": ["Edit"]},
        "hooks": [{"type": "command", "command": ".claude/hooks/auto-doc-sync.sh Edit \"$TOOL_INPUT\" \"\" \"0\""}]
      }
    ],
    "PreToolUse": [
      {
        "matcher": {"tools": ["Bash"]},
        "hooks": [{"type": "command", "command": ".claude/hooks/pre-tool-use-safety.sh \"$TOOL_INPUT\""}]
      }
    ]
  },
  "agile": {
    "auto_changelog": true,
    "auto_readme_sync": true,
    "sprint_tracking": true,
    "velocity_tracking": true
  }
}
